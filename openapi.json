{
  "openapi": "3.0.0",
  "info": {
    "description": "Your personal manga collection on your server. Your content, your rules.",
    "title": "MangaLoyalty",
    "version": "0.0.0"
  },
  "paths": {
    "/api/library": {
      "get": {
        "operationId": "LibraryList",
        "tags": ["Library"], 
        "description": "Retrieves each series.",
        "parameters": [{
          "in": "query",
          "name": "readStatus",
          "description": "The read status.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorReadStatus"}
        }, {
          "in": "query",
          "name": "seriesStatus",
          "description": "The series status.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorSeriesStatus"}
        }, {
          "in": "query",
          "name": "sortKey",
          "description": "The sort key.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorSortKey"}
        }, {
          "in": "query",
          "name": "title",
          "description": "The series title to search.",
          "required": false,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LibraryList"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "post": {
        "operationId": "LibrarySeriesCreate",
        "tags": ["Library"], 
        "description": "Creates the series.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The series url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderSeriesUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LibraryCreate"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/library/{seriesId}": {
      "delete": {
        "operationId": "LibrarySeriesDelete",
        "tags": ["Library"], 
        "description": "Deletes the series.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "get": {
        "operationId": "LibrarySeriesRead",
        "tags": ["Library"], 
        "description": "Retrieves the series.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LibrarySeries"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "put": {
        "operationId": "LibrarySeriesUpdate",
        "tags": ["Library"], 
        "description": "Updates the series.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LibrarySeries"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "patch": {
        "operationId": "LibrarySeriesPatch",
        "tags": ["Library"], 
        "description": "Patches the series automation.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "frequency",
          "description": "The frequency.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorFrequency"}
        }, {
          "in": "query",
          "name": "syncAll",
          "description": "Indicates whether chapters should be synchronized.",
          "required": true,
          "schema": {"type": "boolean"}
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/library/{seriesId}/{chapterId}": {
      "delete": {
        "operationId": "LibraryChapterDelete",
        "tags": ["Library"], 
        "description": "Deletes the chapter.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "path",
          "name": "chapterId",
          "description": "The chapter identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "get": {
        "operationId": "LibraryChapterRead",
        "tags": ["Library"], 
        "description": "Starts a session and synchronizes the chapter when applicable.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "path",
          "name": "chapterId",
          "description": "The chapter identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionListItem"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "put": {
        "operationId": "LibraryChapterUpdate",
        "tags": ["Library"], 
        "description": "Starts a session and synchronizes the chapter.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "path",
          "name": "chapterId",
          "description": "The chapter identifier.",
          "required": true,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionListItem"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "patch": {
        "operationId": "LibraryChapterPatch",
        "tags": ["Library"], 
        "description": "Patches the chapter status.",
        "parameters": [{
          "in": "path",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "path",
          "name": "chapterId",
          "description": "The chapter identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "isReadCompleted",
          "description": "Indicates whether the chapter has been read completely.",
          "required": false,
          "schema": {"type": "boolean"}
        }, {
          "in": "query",
          "name": "pageReadNumber",
          "description": "The page read number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/popular": {
      "get": {
        "operationId": "RemotePopular",
        "tags": ["Remote"],
        "description": "Retrieves popular series.",
        "parameters": [{
          "in": "query",
          "name": "providerName",
          "description": "The provider name.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorProvider"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteList"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/search": {
      "get": {
        "operationId": "RemoteSearch",
        "tags": ["Remote"],
        "description": "Searches series.",
        "parameters": [{
          "in": "query",
          "name": "providerName",
          "description": "The provider name.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/EnumeratorProvider"}
        }, {
          "in": "query",
          "name": "title",
          "description": "The series title to search.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteList"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/series": {
      "get": {
        "operationId": "RemoteSeries",
        "tags": ["Remote"],
        "description": "Retrieves the series.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The series url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderSeriesUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteSeries"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/start": {
      "get": {
        "operationId": "RemoteStart",
        "tags": ["Remote"],
        "description": "Starts a session.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The chapter url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderChapterUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionListItem"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/session": {
      "get": {
        "operationId": "SessionList",
        "tags": ["Session"],
        "description": "Retrieves each session",
        "parameters": [{
          "in": "query",
          "name": "seriesId",
          "description": "The series identifier.",
          "required": false,
          "schema": {"type": "string"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionList"}
              }
            }
          },
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/session/{sessionId}": {
      "get": {
        "operationId": "SessionPage",
        "tags": ["Session"],
        "description": "Retrieves the session page.",
        "parameters": [{
          "in": "path",
          "name": "sessionId",
          "description": "The session identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": true,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionPage"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    }
  },
  "components": {
    "responses": {
      "BadRequest": {
        "description": "Bad Request"
      },
      "NotFound": {
        "description": "Not Found"
      },
      "InternalServerError": {
        "description": "Internal Server Error"
      }
    },
    "schemas": {
      "EnumeratorFrequency": {
        "type": "string",
        "enum": ["never", "hourly", "daily", "weekly", "monthly"]
      },
      "EnumeratorProvider": {
        "type": "string",
        "enum": ["batoto", "fanfox"]
      },
      "EnumeratorReadStatus": {
        "type": "string",
        "enum": ["all", "unread", "read"]
      },
      "EnumeratorSeriesStatus": {
        "type": "string",
        "enum": ["all", "ongoing", "completed"]
      },
      "EnumeratorSortKey": {
        "type": "string",
        "enum": ["addedAt", "lastChapterAddedAt", "lastPageReadAt", "title"]
      },
      "ProviderChapterUrl": {
        "type": "string",
        "oneOf": [
          {"type": "string", "pattern": "^https:\\/\\/bato\\.to\\/chapter\\/[0-9]+$"},
          {"type": "string", "pattern": "^https:\\/\\/fanfox\\.net\\/manga\\/[^\\/]+\\/(v[0-9]+\\/)?c[0-9]+(\\.[0-9]+)?\\/1.html$"}
        ]
      },
      "ProviderSeriesUrl": {
        "type": "string",
        "oneOf": [
          {"type": "string", "pattern": "^https:\\/\\/bato\\.to\\/series\\/[0-9]+$"},
          {"type": "string", "pattern": "^https:\\/\\/fanfox\\.net\\/manga\\/[^\\/]+\\/$"}
        ]
      },
      "LibraryCreate": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {"type": "string"}
        }
      },
      "LibraryList": {
        "type": "object",
        "required": ["hasMorePages", "items"],
        "properties": {
          "hasMorePages": {"type": "boolean"},
          "items": {"type": "array", "items": {"$ref": "#/components/schemas/LibraryListItem"}}
        }
      },
      "LibraryListItem": {
        "type": "object",
        "required": ["id", "image", "title", "unreadCount"],
        "properties": {
          "id": {"type": "string"},
          "image": {"type": "string"},
          "title": {"type": "string"},
          "unreadCount": {"type": "number"}
        }
      },
      "LibrarySeries": {
        "type": "object",
        "required": ["id", "addedAt", "lastSyncAt", "automation", "chapters", "source"],
        "properties": {
          "id": {"type": "string"},
          "addedAt": {"type": "number"},
          "lastChapterAddedAt": {"type": "number"},
          "lastPageReadAt": {"type": "number"},
          "lastSyncAt": {"type": "number"},
          "automation": {"$ref": "#/components/schemas/LibrarySeriesAutomation"},
          "chapters": {"type": "array", "items": {"$ref": "#/components/schemas/LibrarySeriesChapter"}},
          "source": {"$ref": "#/components/schemas/LibrarySeriesSource"}
        }
      },
      "LibrarySeriesAutomation": {
        "type": "object",
        "required": ["frequency", "syncAll"],
        "properties": {
          "checkedAt": {"type": "number"},
          "frequency": {"$ref": "#/components/schemas/EnumeratorFrequency"},
          "syncAll": {"type": "boolean"}
        }
      },
      "LibrarySeriesChapter": {
        "type": "object",
        "required": ["id", "addedAt", "title", "url"],
        "properties": {
          "id": {"type": "string"},
          "addedAt": {"type": "number"},
          "deletedAt": {"type": "number"},
          "syncAt": {"type": "number"},
          "isReadCompleted": {"type": "boolean"},
          "pageCount": {"type": "number"},
          "pageReadNumber": {"type": "number"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "LibrarySeriesSource": {
        "type": "object",
        "required": ["authors", "genres", "image", "isCompleted", "title", "url"],
        "properties": {
          "authors": {"type": "array", "items": {"type": "string"}},
          "genres": {"type": "array", "items": {"type": "string"}},
          "image": {"type": "string"},
          "isCompleted": {"type": "boolean"},
          "summary": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteList": {
        "type": "object",
        "required": ["hasMorePages", "items"],
        "properties": {
          "hasMorePages": {"type": "boolean"},
          "items": {"type": "array", "items": {"$ref": "#/components/schemas/RemoteListItem"}}
        }
      },
      "RemoteListItem": {
        "type": "object",
        "required": ["image", "title", "url"],
        "properties": {
          "image": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteSeries": {
        "type": "object",
        "required": ["authors", "chapters", "genres", "image", "isCompleted", "title", "url"],
        "properties": {
          "authors": {"type": "array", "items": {"type": "string"}},
          "chapters": {"type": "array", "items": {"$ref": "#/components/schemas/RemoteSeriesChapter"}},
          "genres": {"type": "array", "items": {"type": "string"}},
          "image": {"type": "string"},
          "isCompleted": {"type": "boolean"},
          "summary": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteSeriesChapter": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "SessionList": {
        "type": "array",
        "items": {"$ref": "#/components/schemas/SessionListItem"}
      },
      "SessionListItem": {
        "type": "object",
        "required": ["id", "pageCount", "url"],
        "properties": {
          "id": {"type": "string"},
          "finishedAt": {"type": "number"},
          "pageCount": {"type": "number"},
          "url": {"type": "string"},
          "library": {
            "type": "object",
            "required": ["seriesId", "chapterId", "sync"],
            "properties": {
              "seriesId": {"type": "string"},
              "chapterId": {"type": "string"},
              "sync": {"type": "boolean"}
            }
          }
        }
      },
      "SessionPage": {
        "type": "object",
        "required": ["image"],
        "properties": {
          "image": {"type": "string"}
        }
      }
    }
  }
}
