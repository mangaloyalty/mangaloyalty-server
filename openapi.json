{
  "openapi": "3.0.0",
  "info": {
    "description": "Your personal manga collection on your server. Your content, your rules.",
    "title": "MangaLoyalty",
    "version": "0.0.0"
  },
  "paths": {
    "/api/library": {
      "post": {
        "operationId": "LibraryCreateSeries",
        "tags": ["Library"], 
        "description": "Adds a series to the library.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The series url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderSeriesUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LibraryId"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/popular": {
      "get": {
        "operationId": "RemotePopular",
        "tags": ["Remote"],
        "description": "Retrieves popular series.",
        "parameters": [{
          "in": "query",
          "name": "providerName",
          "description": "The provider name.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderName"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteList"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/search": {
      "get": {
        "operationId": "RemoteSearch",
        "tags": ["Remote"],
        "description": "Searches for series.",
        "parameters": [{
          "in": "query",
          "name": "providerName",
          "description": "The provider name.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderName"}
        }, {
          "in": "query",
          "name": "title",
          "description": "The series title.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": false,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteList"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/series": {
      "get": {
        "operationId": "RemoteSeries",
        "tags": ["Remote"],
        "description": "Retrieves the series.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The series url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderSeriesUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RemoteDetail"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/remote/start": {
      "get": {
        "operationId": "RemoteStart",
        "tags": ["Remote"],
        "description": "Starts a session for the chapter.",
        "parameters": [{
          "in": "query",
          "name": "url",
          "description": "The chapter url.",
          "required": true,
          "schema": {"$ref": "#/components/schemas/ProviderChapterUrl"}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionListItem"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/session": {
      "get": {
        "operationId": "SessionList",
        "tags": ["Session"],
        "description": "Retrieves each session",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionList"}
              }
            }
          },
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/session/{sessionId}": {
      "get": {
        "operationId": "SessionPage",
        "tags": ["Session"],
        "description": "Retrieves the session page.",
        "parameters": [{
          "in": "path",
          "name": "sessionId",
          "description": "The session identifier.",
          "required": true,
          "schema": {"type": "string"}
        }, {
          "in": "query",
          "name": "pageNumber",
          "description": "The page number.",
          "required": true,
          "schema": {"type": "number", "minimum": 1}
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SessionPage"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    }
  },
  "components": {
    "responses": {
      "BadRequest": {
        "description": "Bad Request"
      },
      "NotFound": {
        "description": "Not Found"
      },
      "InternalServerError": {
        "description": "Internal Server Error"
      }
    },
    "schemas": {
      "ProviderName": {
        "type": "string",
        "enum": ["batoto", "fanfox"]
      },
      "ProviderSeriesUrl": {
        "type": "string",
        "oneOf": [
          {"type": "string", "pattern": "^https:\\/\\/bato\\.to\\/series\\/[0-9]+$"},
          {"type": "string", "pattern": "^https:\\/\\/fanfox\\.net\\/manga\\/[^\\/]+\\/$"}
        ]
      },
      "ProviderChapterUrl": {
        "type": "string",
        "oneOf": [
          {"type": "string", "pattern": "^https:\\/\\/bato\\.to\\/chapter\\/[0-9]+$"},
          {"type": "string", "pattern": "^https:\\/\\/fanfox\\.net\\/manga\\/[^\\/]+\\/(v[0-9]+\\/)?c[0-9]+(\\.[0-9]+)?\\/1.html$"}
        ]
      },
      "LibraryId": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {"type": "string"}
        }
      },
      "LibraryList": {
        "type": "object",
        "required": ["hasMorePages", "items"],
        "properties": {
          "hasMorePages": {"type": "boolean"},
          "items": {"type": "array", "items": {"$ref": "#/components/schemas/LibraryListItem"}}
        }
      },
      "LibraryListItem": {
        "type": "object",
        "required": ["id", "image", "title"],
        "properties": {
          "id": {"type": "string"},
          "image": {"type": "string"},
          "title": {"type": "string"}
        }
      },
      "LibraryDetail": {
        "type": "object",
        "required": ["id", "addedAt", "lastSyncAt", "chapters", "series"],
        "properties": {
          "id": {"type": "string"},
          "addedAt": {"type": "number"},
          "lastChapterAddedAt": {"type": "number"},
          "lastPageReadAt": {"type": "number"},
          "lastSyncAt": {"type": "number"},
          "chapters": {"type": "array", "items": {"$ref": "#/components/schemas/LibraryDetailChapter"}},
          "series": {"$ref": "#/components/schemas/LibraryDetailSeries"}
        }
      },
      "LibraryDetailChapter": {
        "type": "object",
        "required": ["id", "addedAt", "title", "url"],
        "properties": {
          "id": {"type": "string"},
          "addedAt": {"type": "number"},
          "deletedAt": {"type": "number"},
          "storedAt": {"type": "number"},
          "pageCount": {"type": "number"},
          "pageReadNumber": {"type": "number"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "LibraryDetailSeries": {
        "type": "object",
        "required": ["authors", "genres", "image", "isCompleted", "title", "url"],
        "properties": {
          "authors": {"type": "array", "items": {"type": "string"}},
          "genres": {"type": "array", "items": {"type": "string"}},
          "image": {"type": "string"},
          "isCompleted": {"type": "boolean"},
          "summary": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteList": {
        "type": "object",
        "required": ["hasMorePages", "items"],
        "properties": {
          "hasMorePages": {"type": "boolean"},
          "items": {"type": "array", "items": {"$ref": "#/components/schemas/RemoteListItem"}}
        }
      },
      "RemoteListItem": {
        "type": "object",
        "required": ["image", "title", "url"],
        "properties": {
          "image": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteDetail": {
        "type": "object",
        "required": ["authors", "chapters", "genres", "image", "isCompleted", "title", "url"],
        "properties": {
          "authors": {"type": "array", "items": {"type": "string"}},
          "chapters": {"type": "array", "items": {"$ref": "#/components/schemas/RemoteDetailChapter"}},
          "genres": {"type": "array", "items": {"type": "string"}},
          "image": {"type": "string"},
          "isCompleted": {"type": "boolean"},
          "summary": {"type": "string"},
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "RemoteDetailChapter": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": {"type": "string"},
          "url": {"type": "string"}
        }
      },
      "SessionList": {
        "type": "array",
        "items": {"$ref": "#/components/schemas/SessionListItem"}
      },
      "SessionListItem": {
        "type": "object",
        "required": ["id", "pageCount", "url"],
        "properties": {
          "id": {"type": "string"},
          "pageCount": {"type": "number"},
          "url": {"type": "string"}
        }
      },
      "SessionPage": {
        "type": "object",
        "required": ["image"],
        "properties": {
          "image": {"type": "string"}
        }
      }
    }
  }
}
